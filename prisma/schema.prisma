// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id     String      @id @default(uuid())
  email  String      @unique
  name   String
  tokens JwtTokens[]
}

model JwtTokens {
  id     String @id @default(uuid())
  token  String @unique
  user   User   @relation(fields: [userId], references: [id])
  userId String

  @@index([userId])
}
